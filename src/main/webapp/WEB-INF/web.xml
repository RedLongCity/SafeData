<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
    <display-name>JSPLogin</display-name>
    <servlet>
        <description></description>
        <display-name>LoginController</display-name>
        <servlet-name>Login</servlet-name>
        <servlet-class>main.java.com.controllers.servlet.LoginController</servlet-class>
    </servlet>
    <servlet>
        <description></description>
        <display-name>EncryptionController</display-name>
        <servlet-name>Encryption</servlet-name>
        <servlet-class>main.java.com.controllers.servlet.EncryptionController</servlet-class>
    </servlet>
    <servlet>
        <description></description>
        <display-name>RegisterController</display-name>
        <servlet-name>Register</servlet-name>
        <servlet-class>main.java.com.controllers.servlet.RegisterController</servlet-class>
